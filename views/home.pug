include layout 
link(rel="stylesheet", href="/stylesheets/home.css")
body
    #parent
        nav#sidebarMenu.collapse.d-lg-block.sidebar.collapse.bg-white
            .position-sticky
                .list-group.list-group-flush.mx-3.mt-4
                    a.list-group-item.list-group-item-action.py-2.ripple.active(href='/home')
                        i.fa.fa-home.fa-fw.me-3
                        span Home
                    a.list-group-item.list-group-item-action.py-2.ripple(href='/message')
                        i.fa.fa-envelope.fa-fw.me-3
                        span Message
                    a.list-group-item.list-group-item-action.py-2.ripple(href='/profile')
                        i.fa.fa-user.fa-fw.me-3
                        span Profile
        .post-parent
            .posts
                if posts.length > 0
                    each val in posts 
                        .post.bg-primary
                            .post-header
                                .post-user
                                    img.post-user-image(src="/images/pfp.jpg")
                                    .post-user-details
                                        span.post-user-name Jossie
                                        span.post-user-username.text-muted @jossiejpeg
                                span.text-muted.post-date= val.datePosted
                            .post-description= val.description
                            
                            .carousel.carousel-dark.slide(data-bs-ride="carousel" id="postCarousel")
                                .carousel-indicators
                                    if val.content.length > 1
                                        each slide, index in val.content
                                            if index == 0
                                                button.active(type="button" data-bs-target="#postCarousel" data-bs-slide-to=index aria-current="true")
                                            else
                                                button(type="button" data-bs-target="#postCarousel" data-bs-slide-to=index)
                                .carousel-inner
                                    .carousel
                                        if val.content.length > 1
                                            each url,index in val.content 
                                                if index == 0
                                                    .carousel-item.active 
                                                        img.post-image(src=url)
                                                else
                                                    .carousel-item 
                                                        img.post-image(src=url)
                                        else 
                                            img.post-image(src=val.content[0])
                                    button.carousel-control-prev(type="button" data-bs-target="#postCarousel" data-bs-slide="prev")
                                        span.carousel-control-prev-icon(aria-hidden="true")
                                        span.visually-hidden Previous 
                                    button.carousel-control-next(type="button" data-bs-target="#postCarousel" data-bs-slide="next")
                                        span.carousel-control-next-icon(aria-hidden="true")
                                        span.visually-hidden Next

                            .post-footer 
                                i.fa.fa-heart-o.like-button(onclick="clickLike()" onmouseover="likeButtonHover(this)" onmouseout="likeButtonReset(this)")
                                    span.likes= val.likes
                                button.btn.bg-white
                                    i.fa.fa-money
                                        span.tip-button Send Tip
                                
    script.
        function likeButtonHover(item){
            item.classList.add('fa-heart');
            item.classList.remove('fa-heart-o');
        }
        function likeButtonReset(item){
            item.classList.add('fa-heart-o');
            item.classList.remove('fa-heart');
        }